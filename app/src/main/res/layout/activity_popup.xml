<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity_popup">


    <TextView
        android:id="@+id/textview01"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/whitebutton"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/muli_extrabold"
        android:text="@string/classicmode"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textview01"
        app:layout_constraintStart_toStartOf="@+id/textview01"
        app:layout_constraintTop_toTopOf="@+id/textview01" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="264dp"
        android:layout_height="120dp"
        android:layout_marginBottom="408dp"
        android:text="Ce mode vous permet de tester vos capacité en calcul mental et de les améliorer. Chaque bonne réponse apporte 10 points et les mauvaises -5points. Les équations contenant des fractions attendent une réponse sous forme de fraction"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview01"
        app:layout_constraintEnd_toEndOf="@+id/textview01"
        app:layout_constraintStart_toStartOf="@+id/textview01" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="264dp"
        android:layout_height="120dp"
        android:text="Dans ce mode, vous devez mener votre renard le plus loin possible en répondant correctement aux equations proposées. Vous disposez de 20secondes pour répondre. Si votre réponse est bonne, le course continue, sinon vous perdez une vie. Le jeu s'arrête lorsque vous perdez 3 vies"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview01"
        app:layout_constraintEnd_toEndOf="@+id/textview01"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/textview01"
        app:layout_constraintTop_toBottomOf="@+id/textView05"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="264dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:text="ce mini jeu est une version multijoueur du mode aventure. La partie s'arrête lorsque l'un des 2 joueurs a perdu toutes ses vies. Le joueur ayant répondu au plus d'équations correctement sera le gagnant"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview01"
        app:layout_constraintEnd_toEndOf="@+id/textview01"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/textview01"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/muli_extrabold"
        android:text="@string/adventuremode"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview01"
        app:layout_constraintEnd_toEndOf="@+id/textview01"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/textview01"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="176dp"
        android:fontFamily="@font/muli_extrabold"
        android:text="@string/multimode"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview01"
        app:layout_constraintEnd_toEndOf="@+id/textview01"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textview01" />


</androidx.constraintlayout.widget.ConstraintLayout>