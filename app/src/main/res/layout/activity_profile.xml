<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/pointNumber"
        android:layout_width="138dp"
        android:layout_height="51dp"


        android:fontFamily="@font/muli_extrabold"

        android:gravity="center"
        android:text="698 points"
        android:textColor="@color/orangemenu"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/stats"
        android:layout_width="190dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/muli_extrabold"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:text="@string/stats"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="32dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="83dp"
        android:layout_height="96dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="16dp"
        tools:progress="80" />

    <ImageButton
        android:id="@+id/logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="24dp"
        android:maxHeight="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/foxlogo"
        app:layout_constraintEnd_toStartOf="@+id/stats"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:maxWidth="24dp"
        android:maxHeight="24dp"

        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="21dp"
        tools:ignore="MissingConstraints">

    </FrameLayout>

    <TextView
        android:id="@+id/classement_title"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/whitebutton"
        android:fontFamily="@font/muli_semibold"
        android:gravity="center"
        android:radius="5dp"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:text="Classement de l'utilisateur"
        android:textColor="@color/black"
        android:textSize="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="232dp" />

    <ImageView
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/circleuser"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/stats"
        app:layout_constraintStart_toStartOf="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="@+id/progress_bar"
        tools:ignore="MissingConstraints,UnknownId" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/pic"
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:src="@drawable/foxprofil"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="32dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/userprofile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@null"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>