<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projets6.activity.activity_settings">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/muli_extrabold"
        android:gravity="center"
        android:text="@string/reglage"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/whitebutton"
                android:paddingLeft="30dp"
                android:text="Dark thème" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/whitebutton"
                android:backgroundTint="@color/orangemenu"
                android:fontFamily="@font/muli_extrabold"
                android:text="Langues"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/french"
                    android:layout_width="61dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginStart="111dp"
                    android:layout_marginLeft="111dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/whitebutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/france"
                    app:layout_constraintEnd_toEndOf="@+id/test"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/test"
                    app:layout_constraintTop_toBottomOf="@+id/button" />

                <ImageButton
                    android:id="@+id/english"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginStart="238dp"
                    android:layout_marginLeft="238dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="111dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/whitebutton"
                    android:scaleType="fitCenter"

                    android:src="@drawable/ru"
                    app:layout_constraintEnd_toEndOf="@+id/test"
                    app:layout_constraintHorizontal_bias="0.0" />

            </RelativeLayout>

            <TextView
                android:id="@+id/musique"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/whitebutton"
                android:backgroundTint="@color/orangemenu"
                android:fontFamily="@font/muli_extrabold"
                android:text="@string/musique"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <Switch
                android:id="@+id/fond"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/whitebutton"

                android:paddingLeft="30dp"
                android:text="Musique de fond" />

            <Switch
                android:id="@+id/bruitage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/whitebutton"

                android:paddingLeft="30dp"
                android:text="Bruitages" />

            <Button
                android:id="@+id/credit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="110dp"
                android:background="@drawable/whitebutton"
                android:backgroundTint="@color/orangemenu"
                android:text="Crédit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />




        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/retour"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"

        android:background="@color/purplemenu"
        android:scaleType="fitCenter"
        android:src="@drawable/retour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>